root = true

[*]
charset                     = utf-8
indent_style                = tab
tab_width                   = 2
indent_size                 = 2
end_of_line                 = lf
max_line_length             = 120
insert_final_newline        = false
trim_trailing_whitespace    = true
ij_continuation_indent_size = 2
ij_visual_guides            = 120
ij_smart_tabs               = true
ij_wrap_on_typing           = true

[*.md]
trim_trailing_whitespace = false

[*.test]
trim_trailing_whitespace = false
